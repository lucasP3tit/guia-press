<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-success mt-2" href="/admin/category/new">Nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category=>{ %>
                    <tr>
                        <td> <%=category.id%> </td>
                        <td> <%=category.title%> </td>
                        <td> <%=category.slug%> </td>
                        <td> 
                            <a class="btn btn-warning">Editar</a>
                            <form method="POST" action="/admin/category/delete/<%= category.id %>" style="display:inline" onSubmit="deleteConfirm(event)">
                                <button class="btn btn-danger">Remover</button>
                            </form>
                            
                        </td>
                    </tr>
                <%})%>

            </tbody>
        </table>
        
    </div>
</body>
<%- include('../../partials/footer.ejs') %>
<script>
    function deleteConfirm(event){
        event.preventDefault();
        let decision = confirm("Deseja remover a categoria?");
        if(decision){
            event.target.submit();
        }
    }
</script>