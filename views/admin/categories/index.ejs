<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-success mt-2" href="/admin/category/new">Nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category=>{ %>
                    <tr>
                        <td> <%=category.id%> </td>
                        <td> <%=category.title%> </td>
                        <td> <%=category.slug%> </td>
                        <td> 
                            <button class="btn btn-warning">Editar</button>
                            <button class="btn btn-danger">Remover</button>
                        </td>
                    </tr>
                <%})%>

            </tbody>
        </table>
        
    </div>
</body>